<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_name"
        android:textSize="20sp"
        android:textColor="#336633"
        android:id="@+id/listPlaceName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listPlaceName"
        android:textSize="20sp"
        android:id="@+id/detailPlaceName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="20sp"
        android:textColor="#336633"
        android:id="@+id/listPlaceAddress"
        android:layout_below="@+id/listPlaceName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listPlaceAddress"
        android:layout_below="@+id/detailPlaceName"
        android:textSize="20sp"
        android:id="@+id/detailPlaceVicinity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currently_open"
        android:textSize="20sp"
        android:id="@+id/listPlaceHours"
        android:textColor="#336633"
        android:layout_below="@+id/listPlaceAddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listPlaceHours"
        android:layout_below="@+id/detailPlaceVicinity"
        android:textSize="20sp"
        android:id="@+id/detailPlaceOpenNow"/>


</RelativeLayout>